<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".activities.RegisterActivity"
    android:background="@color/gray">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logo_regiser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        />
    <ImageView
        android:id="@+id/email_icon_register"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_24"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/logo_regiser"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/email_icon_register"
        android:layout_below="@+id/logo_regiser"
        android:textColorHint="@color/white"
        android:hint="Enter your email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/lock_icon_register"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_24"
        android:layout_marginTop="45dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/email_icon_register"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/email_icon_register"
        android:layout_below="@id/ed_email_register"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"

        android:hint="Enter your password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/lock_icon_register_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_24"
        android:layout_marginTop="45dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/lock_icon_register"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lock_icon_register_2"
        android:layout_below="@id/ed_password_register"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:hint="Enter your name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_name_register"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        android:text="Register"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_back_register"
        android:text="Back to home"
        android:layout_below="@id/btn_login_register"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
</RelativeLayout>